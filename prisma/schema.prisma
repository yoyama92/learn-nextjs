generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// ユーザー
model User {
  id    String @id /// ID
  email String @unique /// メールアドレス
  name  String /// 名前

  createdAt DateTime @default(now()) @map("created_at") /// 登録日時
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") /// 更新日時

  role String? @map("role") /// 役割

  emailVerified Boolean @default(false) @map("email_verified") /// メールアドレス確認済みフラグ

  sessions Session[]
  accounts Account[]

  image      String?   @map("image") /// プロフィール画像URL
  banned     Boolean?  @default(false) @map("banned") /// バンフラグ
  banReason  String?   @map("ban_reason") /// バン理由
  banExpires DateTime? @map("ban_expires") /// バン解除日時

  @@map("users")
}

/// セッション
model Session {
  id        String   @id @map("id") /// ID
  expiresAt DateTime @map("expires_at") /// 有効期限
  token     String   @map("token") /// トークン
  createdAt DateTime @default(now()) @map("created_at") /// 作成日時
  updatedAt DateTime @updatedAt @map("updated_at") /// 更新日時
  ipAddress String?  @map("ip_address") /// IPアドレス
  userAgent String?  @map("user_agent") /// ユーザーエージェント
  userId    String   @map("user_id") /// ユーザーID
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String? @map("impersonated_by") /// 代理ログインした管理者のユーザーID

  @@unique([token])
  @@index([userId])
  @@map("session")
}

/// アカウント
model Account {
  id                    String    @id @map("id") /// ID
  accountId             String    @map("account_id") /// アカウントID
  providerId            String    @map("provider_id") /// プロバイダーID
  userId                String    @map("user_id") /// ユーザーID
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @map("access_token") /// アクセストークン
  refreshToken          String?   @map("refresh_token") /// リフレッシュトークン
  idToken               String?   @map("id_token") /// IDトークン
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at") /// アクセストークン有効期限
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at") /// リフレッシュトークン有効期限
  scope                 String?   @map("scope") /// スコープ
  password              String?   @map("password") /// パスワード
  createdAt             DateTime  @default(now()) @map("created_at") /// 作成日時
  updatedAt             DateTime  @updatedAt @map("updated_at") /// 更新日時

  @@index([userId])
  @@map("account")
}

/// 認証情報
model Verification {
  id         String   @id @map("id") /// ID
  identifier String   @map("identifier") /// 識別子
  value      String   @map("value") /// 値
  expiresAt  DateTime @map("expires_at") /// 有効期限
  createdAt  DateTime @default(now()) @map("created_at") /// 作成日時
  updatedAt  DateTime @updatedAt @map("updated_at") /// 更新日時

  @@index([identifier])
  @@map("verification")
}
